{
	"extends": [
		"eslint:recommended",
		"plugin:vue/essential"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"vue"
	],
	"env":{
		"browser": true,
		"es2021": true,
		"es6": true,
		"node": true
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single"],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"no-promise-executor-return": 2,
		"no-var": 2,
		"eol-last": ["error", "never"],
		"newline-per-chained-call": "error",
		"no-unreachable-loop": "error"
	}
}